---
import HomePage from "../layouts/HomePage.astro";
import { normalizePosts } from "../common/utils";
const posts = await Astro.glob("../content/*.md");
const formatPosts = normalizePosts(posts);
---

<HomePage title="文章归档">
  <main class="main-content">
    <article>
      <!-- <h1>Archive</h1> -->
      <ul class="post-list">
        {
          formatPosts.map((post) => (
            <li class="post-item">
              <a href={`/posts/${post.id}`} class="post-title">
                {post.title}
              </a>
              {post.date && <date class="date">{post.date}</date>}
            </li>
          ))
        }
      </ul>
    </article>
  </main>
</HomePage>

<style>
  main.main-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    max-width: 900px;
    flex: 1;
    padding: 0 40px;
    margin: 0 auto;
  }

  article {
    width: 100%;
    padding: 2rem 0;

    h1 {
      font-size: 24px;
      margin-bottom: 3rem;
    }

    .post-list {
      list-style-type: none;
      padding: 0;
    }

    .post-item {
      display: flex;
      flex-direction: column;
      margin-bottom: 3rem;
    }

    .post-title {
      font-size: 18px;
      margin-bottom: 10px;
      color: var(--color-accent);
    }

    .date {
      font-size: 14px;
      font-style: italic;
      color: var(--color-text-secondary);
    }
  }
</style>
